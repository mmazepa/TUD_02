<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- Scans within the base package of the application for @Components to
		configure as beans -->
	<context:component-scan base-package="service" />

	<bean id="person01" class="domain.Person">
		<property name="firstName" value="Henryk" />
    <property name="gender" value="Male" />
		<property name="yob" value="1964" />
	</bean>

  <bean id="grandpa01" class="domain.Grandparent">
		<property name="firstName" value="Janusz" />
    <property name="gender" value="Male" />
		<property name="yob" value="1950" />
    <property name="grandparentInfo" value="I'm grandpa!" />
	</bean>

  <bean id="parent01" class="domain.Parent">
    <property name="firstName" value="Sebastian" />
    <property name="gender" value="Male" />
    <property name="yob" value="1970" />
    <property name="parentInfo" value="I'm daddy!" />
  </bean>

  <bean id="child01" class="domain.Child">
    <property name="firstName" value="Brajan" />
    <property name="gender" value="Male" />
    <property name="yob" value="1990" />
    <property name="childInfo" value="I'm son!" />
  </bean>

</beans>
